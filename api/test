function assertAreEqual(expected, actual)
  assert(expected == actual, "Expected: "..tostring(expected)..
    ", actual: "..tostring(actual))
end

function assertAreNotEqual(expected, actual)
  assert(expected ~= actual, "Unexpected equality")
end

function assertNotNil(x)
  assert(x, "Unexpected nil")
end

function assertNil(x)
  assert(x == nil, "Expected nil, got "..tostring(x))
end

function assertTrue(x)
  assert(x == true, "Expected true, got "..tostring(x))
end

function assertFalse(x)
  assert(x == false, "Expected false, got "..tostring(x))
end

